{
  "name": "pytask",
  "publisher": "mj023",
  "displayName": "Pytask",
  "repository": {"url": "https://github.com/mj023/vscode-pytask"},
  "description": "An Extension that enables the use of Pytask in VSCode",
  "icon": "doc/pytask.png",
  "version": "0.0.13",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "title": "Pytask",
      "properties": {
        "pytask.enableCommandLineOptions": {
          "type": "string",
          "default": "none",
          "enum": [
            "none",
            "textprompt",
            "list"
          ],
          "description": "Select how to input Pytasks Command Line Options."
        }
      }
    },
    "commands": [
      {
        "command": "pytask.createDAG",
        "title": "Create DAG"
      }
    ],
    "menus": {
      "testing/title": [
        {
          "command": "pytask.createDAG",
          "group": "navigation"
        }
      ]
    }
  },
  "extensionDependencies": [
    "ms-python.python"
  ],
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/glob": "^8.0.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "^16.18.14",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "@vscode/test-electron": "^2.2.0",
    "esbuild": "^0.17.4",
    "eslint": "^8.28.0",
    "express": "4.18.2",
    "glob": "^8.0.3",
    "mocha": "^10.1.0",
    "ts-loader": "^9.4.1",
    "typescript": "^4.9.3",
    "webpack": "^5.76.0",
    "webpack-cli": "^5.0.0"
  }
}
